<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="12dp"
    android:weightSum="10"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/shopImage"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginRight="8dp"
        android:layout_weight="3"/>
    <LinearLayout
        android:layout_weight="7"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="乔尔尼昂外卖"
            android:id="@+id/shopTitle"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_height="22dp" />
        <RelativeLayout
            android:layout_below="@+id/shopTitle"
            android:layout_width="match_parent"
            android:layout_height="16dp">
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:text="月售620"
                android:id="@+id/salesCount"
                android:textSize="14sp"
                android:layout_height="16sp" />
            <TextView
                android:id="@+id/costTime"
                android:text="30分钟 1.9km"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="16sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:layout_alignParentLeft="true"
                android:textSize="14sp"
                android:id="@+id/sendLevel"
                android:text="起送20  配送5"
                android:layout_width="wrap_content"
                android:layout_height="16dp" />
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@mipmap/kuaiyu"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="22dp">
            <ImageView
                android:layout_width="22dp"
                android:src="@drawable/ic_hotgoods"
                android:layout_height="22dp" />
            <TextView
                android:id="@+id/goods1"
                android:layout_width="wrap_content"
                android:text="鸡汤米线"
                android:textColor="#bd871b"
                android:padding="2dp"
                android:textSize="12sp"
                android:background="@drawable/textview_border"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/goods2"
                android:layout_width="wrap_content"
                android:text="牛肉砂锅"
                android:textColor="#bd871b"
                android:padding="2dp"
                android:textSize="12sp"
                android:background="@drawable/textview_border"
                android:layout_marginRight="4dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/goods3"
                android:layout_width="wrap_content"
                android:text="豆腐脑"
                android:textColor="#bd871b"
                android:padding="2dp"
                android:textSize="12sp"
                android:background="@drawable/textview_border"
                android:layout_marginRight="4dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/goods4"
                android:layout_width="wrap_content"
                android:text="豆腐脑"
                android:textColor="#bd871b"
                android:padding="2dp"
                android:textSize="12sp"
                android:background="@drawable/textview_border"
                android:layout_marginRight="4dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/goods5"
                android:layout_width="wrap_content"
                android:text="豆腐"
                android:textColor="#bd871b"
                android:padding="2dp"
                android:textSize="12sp"
                android:background="@drawable/textview_border"
                android:layout_marginRight="4dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <ImageView
                android:layout_width="20dp"
                android:src="@drawable/ic_youhui"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/youhui1"
                android:layout_width="wrap_content"
                android:text="55减5"
                android:textColor="#fb4e44"
                android:padding="2dp"
                android:textSize="12sp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/textview_youhui"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/youhui2"
                android:layout_width="wrap_content"
                android:text="100减10"
                android:textColor="#fb4e44"
                android:padding="2dp"
                android:textSize="12sp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/textview_youhui"
                android:layout_height="20dp" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <ImageView
                android:layout_width="20dp"
                android:src="@drawable/ic_weizhi"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/shopAddress"
                android:layout_width="wrap_content"
                android:text="宛城区梅溪路"
                android:padding="2dp"
                android:textSize="12sp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_height="20dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
